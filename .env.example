# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/pharma_pos
# For SQLite (offline mode): sqlite:///./pharma_pos.db

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=PHARMA-POS-AI
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=False
N8N_WEBHOOK_URL=http://localhost:5678/webhook/pharma-notifications

# Scheduler Settings
ENABLE_BACKGROUND_SCHEDULER=True
EXPIRY_CHECK_HOUR=9
LOW_STOCK_CHECK_HOUR=10

# Business Settings
LOW_STOCK_THRESHOLD=10
EXPIRY_WARNING_DAYS=30
DEAD_STOCK_DAYS=90

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
