# Environment Configuration for Pharma POS AI
# Copy this file to .env and update the values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=pharma_pos
POSTGRES_USER=pharma_user
POSTGRES_PASSWORD=changeme123_CHANGE_THIS_IN_PRODUCTION

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================
# JWT Secret Key - MUST be at least 32 characters long
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars-please-use-openssl-rand

# JWT Algorithm
ALGORITHM=HS256

# Access token expiration time (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Pharma POS AI
ENVIRONMENT=production
DEBUG=false

# CORS Origins (comma-separated list)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://frontend","http://localhost"]

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
# Docker container names (optional, defaults are set in docker-compose.yml)
# COMPOSE_PROJECT_NAME=pharma-pos

# ============================================================================
# TIMEZONE
# ============================================================================
TZ=Africa/Accra

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit the .env file to version control
# 2. Generate a strong SECRET_KEY using: openssl rand -hex 32
# 3. Use strong passwords for POSTGRES_PASSWORD
# 4. Update VITE_API_URL to your production domain when deploying
